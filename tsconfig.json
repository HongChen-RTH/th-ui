{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@th-ui/utils": [
        "packages/utils/src"
      ],
      "@th-ui/icons": [
        "packages/icons/src"
      ],
      "@th-ui/fe": [
        "packages/fe/*"
      ],
      "th-ui": [
        "packages/th-ui/src"
      ],
      "th-ui/*": [
        "packages/th-ui/src/*"
      ]
    },
    "types": [
      "vitest/globals"
    ],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}